/**
 *
 * Implementation of hook_menu().
 */
function homepage_menu() {
  $items = array();
  $items['home'] = array (
      'title' => 'home page',
      'description' => 'HOME PAGE',
      'page callback' => 'home_page',
      'access callback' => TRUE,
      'type' => MENU_CALLBACK,
  );
  return $items;

}

/**
 * Funcion callback
 */
function home_page(){

  return drupal_get_form("home_page_form");
  
}

