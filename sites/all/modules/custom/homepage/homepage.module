 */
function _get_home_page_links() {
  
  $links = array();
  
  $links['javi'] = array(
  		'title' => '<h2>Proyecto de Javier</h2>',
  		'href' => 'proyect/javi',
  		'html' => TRUE,
      'attributes' => array('class' => 'javi-homepage'),
  );
  $links['jaime'] = array(
  		'title' => '<h2>Proyecto de Jaime</h2>',
